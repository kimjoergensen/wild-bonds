{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@wild-bonds/*": [
        "src/*"
      ],
      "@wild-bonds/core/*": [
        "src/core/*"
      ],
      "@wild-bonds/scenes/*": [
        "src/scenes/*"
      ],
      "@wild-bonds/systems/*": [
        "src/systems/*"
      ],
      "@wild-bonds/entities/*": [
        "src/entities/*"
      ],
      "@wild-bonds/models/*": [
        "src/models/*"
      ],
      "@wild-bonds/utils/*": [
        "src/utils/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}